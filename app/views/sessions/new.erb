<h1>Login</h1>

<% if @errors %>
  <% @errors.each do |error| %>
    <%= error %>
  <% end %>
<% end %>

<form action='/sessions' method='POST'>
  <input type='text' name='email' placeholder='email'><br><br>
  <input type='password' name='password' placeholder='password'><br><br>
  <input type='submit' value='login'>
</form>
